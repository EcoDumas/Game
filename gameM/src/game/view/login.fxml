            <ImageView fitHeight="121.0" fitWidth="215.0" layoutX="200.0" layoutY="24.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@logo.png" />
               </image>
            </ImageView>
        </children>
    </Pane>
</children>
