<?import javafx.scene.text.Font?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="game.controller.Controller">
<columnConstraints>
    <ColumnConstraints />
</columnConstraints>
<rowConstraints>
    <RowConstraints />
</rowConstraints>
<children>
    <Pane prefHeight="398.0" prefWidth="478.0" style="-fx-background-color: #4E4E4E;">
        <children>
            <Label layoutX="68.0" layoutY="166.0" text="Username:" textFill="WHITE">
                <font>
                    <Font size="18.0" />
                </font></Label>
            <Label layoutX="71.0" layoutY="219.0" text="Password:" textFill="WHITE">
                <font>
                    <Font size="18.0" />
                </font></Label>
            <TextField fx:id="username" layoutX="160.0" layoutY="160.0" prefHeight="25.0" prefWidth="215.0" style="-fx-background-color: #e3e2de; -fx-background-radius: 15;">
                <font>
                    <Font size="18.0" />
                </font></TextField>
            <PasswordField fx:id="password" layoutX="160.0" layoutY="213.0" prefHeight="25.0" prefWidth="215.0" style="-fx-background-color: #e3e2de; -fx-background-radius: 15;">
                <font>
                    <Font size="18.0" />
                </font></PasswordField>
            <Button fx:id="loginBtn" layoutX="160.0" layoutY="302.0" mnemonicParsing="false" onAction="#login" prefHeight="41.0" prefWidth="100.0" style="-fx-background-color: #9A9696;" text="Login" textFill="#cdff00" />
            <Label fx:id="error" alignment="CENTER" layoutX="68.0" layoutY="275.0" prefHeight="27.0" prefWidth="370.0" textFill="#b52222">
                <font>
                    <Font size="18.0" />
                </font></Label>
            <Button fx:id="signin" layoutX="275.0" layoutY="302.0" mnemonicParsing="false" onAction="#register" prefHeight="41.0" prefWidth="100.0" style="-fx-background-color: #9A9696;" text="Register" textFill="#cdff00" />
